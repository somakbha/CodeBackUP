package org.somak.lambda;

import java.util.Arrays;
import java.util.Collection;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;

import org.somak.lambda.inter.PrintListInterface;
import org.somak.lambda.pojo.Person;

public class Unit1Exercise {

	public static void main(String[] args) {
		List<Person> people = Arrays.asList(
				new Person("Charles", "Dickens", 60),
				new Person("Lewis", "Carroll", 42),
				new Person("Thomas", "Carlyle", 51),
				new Person("Charlotte", "Bronte", 45),
				new Person("Matthew", "Arnold", 39)
				);
		
		// Step 1: Sort list by last name
		
		Comparator<Person> c=(obj1, obj2)->obj1.getLastName().compareTo(obj2.getLastName());
		Collections.sort(people, c);
		
		
		// Step 2: Create a method that prints all elements in the list
		PrintListInterface p=l1 -> {
			
			for(Person p1:l1)
			{
				System.out.print(p1);
			}
			
		};
		
		p.print(people);
		
		// Step 3: Create a method that prints all people that have last name beginning with C 

	}
	
	public static void printList(PrintListInterface p)
	{
		p.print(l);
	}

}
