package org.somak.map.flatmap;

import java.util.Arrays;
import java.util.List;
import java.util.stream.Collectors;

public class MapFlapMap {

	public static void main(String[] args) {
		List<String>words=Arrays.asList("Java Dev Journal", "Java", "Spring Boot", "Java8");
		List<Integer>wordsLength=words.stream().map(s->s.length()).collect(Collectors.toList());
		wordsLength.forEach(System.out::println);
		
		
		List<String[]> l2=words.stream().map(s->s.split("")).distinct().collect(Collectors.toList());

		l2.forEach(System.out::println);
		
		
		List<String> l3=words.stream().map(s->s.split("")).flatMap(Arrays::stream).distinct().collect(Collectors.toList());

		l3.forEach(System.out::println);
	}

}
